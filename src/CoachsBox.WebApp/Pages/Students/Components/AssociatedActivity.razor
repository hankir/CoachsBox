@using CoachsBox.WebApp.AppFacade.Students.DTO 
@inherits OwningComponentBase

<div class="card text-center">
  <div class="card-header">
    <ul class="nav nav-tabs card-header-tabs" id="studentActivities" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#payments-history" role="tab" aria-controls="relatives" aria-selected="true">История платежей</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#groups" role="tab" aria-controls="relatives" aria-selected="true">Группы</a>
      </li>
    </ul>
  </div>

  <div class="tab-content" style="min-height:60px" id="studentActivitiesContent">
    <div class="tab-pane fade show active" id="payments-history" role="tabpanel" aria-labelledby="payments-history-tab">
      <StudentPayments Student="@this.Student" />
    </div>

    <div class="tab-pane fade show" id="groups" role="tabpanel" aria-labelledby="groups-tab">
      <StudentGroups Student="@this.Student" />
    </div>
  </div>
</div>

@code {
  [Parameter]
  public StudentDetailsDTO Student { get; set; }
}