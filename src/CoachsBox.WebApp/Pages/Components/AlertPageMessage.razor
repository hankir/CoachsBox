@using Microsoft.AspNetCore.Http
@inherits OwningComponentBase<IHttpContextAccessor>

@if (this.displayMessage != null)
{
  string alertClassName = "alert alert-dismissible fade show ";
  switch (this.displayMessage.MessageType)
  {
    case CoachsBox.WebApp.Pages.Shared.PageMessageType.Error:
      alertClassName += "alert-danger";
      break;
    case CoachsBox.WebApp.Pages.Shared.PageMessageType.Warning:
      alertClassName += "alert-warning";
      break;
    case CoachsBox.WebApp.Pages.Shared.PageMessageType.Success:
      alertClassName += "alert-success";
      break;
    case CoachsBox.WebApp.Pages.Shared.PageMessageType.Information:
    default:
      alertClassName += "alert-info";
      break;
  }
  <div class="@alertClassName" role="alert">
    @this.displayMessage.Message
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
}
