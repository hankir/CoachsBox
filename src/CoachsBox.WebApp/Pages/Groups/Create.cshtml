@page
@model CoachsBox.WebApp.Pages.Groups.CreateModel

@{
  ViewData["Title"] = "Новая группа";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
  <div class="col-md-4">
    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="CreateCommand.Name" class="control-label"></label>
        <input asp-for="CreateCommand.Name" class="form-control" />
        <span asp-validation-for="CreateCommand.Name" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="CreateCommand.BranchId" class="control-label"></label>
        <select asp-for="CreateCommand.BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
      </div>
      <div class="form-group">
        <label asp-for="ProgramId" class="control-label">@Html.DisplayNameFor(model => model.CreateCommand.Program)</label>
        <select asp-for="ProgramId" class="form-control" asp-items="ViewBag.ProgramId"></select>
        <span asp-validation-for="ProgramId" class="text-danger" />
      </div>
      <div class="form-group">
        <label asp-for="CreateCommand.TariffId" class="control-label">@Html.DisplayNameFor(model => model.CreateCommand.TariffId)</label>
        <select asp-for="CreateCommand.TariffId" class="form-control" asp-items="ViewBag.TariffId"></select>
        <span asp-validation-for="TariffId" class="text-danger" />
      </div>
      <div class="form-group">
        <input type="submit" value="Создать" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-page="Index">Вернуться к списку</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
