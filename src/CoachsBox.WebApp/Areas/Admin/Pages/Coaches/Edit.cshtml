@page
@model CoachsBox.WebApp.Areas.Admin.Pages.Coaches.EditModel

@{
  ViewData["Title"] = "Изменение тренера";
  Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
  <form method="post" class="col col-sm col-md col-xl-6 col-lg-6">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor((model) => model.InputCommand.Id)
    <partial name="_CoachEditorPartial" for="InputCommand" />
    <div class="form-group">
      <input type="submit" value="Сохранить" class="btn btn-primary" />
      <a asp-page="Index" class="btn btn-secondary">Отмена</a>
    </div>
  </form>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <partial name="PersonEditorsPartial/AddressScripts" for="InputCommand" />
}
